{
  "name": "ai-llm-studio-alpha",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "python3 -m http.server 4173",
    "desktop:dev": "electron .",
    "desktop:build": "electron-builder -w",
    "mobile:sync": "npx cap sync",
    "mobile:apk": "npx cap sync android && cd android && ./gradlew assembleDebug",
    "tools:linux": "bash scripts/install-tools-linux.sh",
    "tools:kali": "bash scripts/install-tools-kali.sh",
    "tools:windows": "powershell -ExecutionPolicy Bypass -File scripts/install-tools-windows.ps1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/android": "^6.1.2"
  },
  "build": {
    "appId": "com.alpha.aillmstudio",
    "productName": "AI LLM Studio Alpha",
    "files": [
      "index.html",
      "styles.css",
      "app.js",
      "lib/**/*",
      "electron-main.js"
    ],
    "win": {
      "target": ["nsis"]
    }
  }
}
